<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.jets.dao.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitCartServlet</servlet-name>
        <servlet-class>com.jets.dao.SubmitCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.jets.dao.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.jets.ecommerce.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreditChargeServlet</servlet-name>
        <servlet-class>com.jets.dao.CreditChargeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserProfileServlet</servlet-name>
        <servlet-class>com.jets.dao.EditUserProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitCartServlet</servlet-name>
        <url-pattern>/SubmitCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreditChargeServlet</servlet-name>
        <url-pattern>/CreditChargeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserProfileServlet</servlet-name>
        <url-pattern>/EditUserProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>com.jets.ecommerce.ProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditDeleteServlet</servlet-name>
        <servlet-class>com.jets.ecommerce.EditDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
         <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/ProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditDeleteServlet</servlet-name>
        <url-pattern>/EditDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.jets.dao.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/AddProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServelet</servlet-name>
        <url-pattern>/logoutServelet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutServelet</servlet-name>
        <servlet-class>com.jets.ecommerce.logoutServelet</servlet-class>
    </servlet>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ProductsServlet</welcome-file>
    </welcome-file-list>
</web-app>
